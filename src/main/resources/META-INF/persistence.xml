<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="HOSPITAL" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.SoftServe.ita.Ch_039.Model.Entity.Patient</class>
        <class>com.SoftServe.ita.Ch_039.Model.Entity.Analysis</class>
        <class>com.SoftServe.ita.Ch_039.IO.Adapters.DateTimeForJPAPatientAdapter</class>
        <class>com.SoftServe.ita.Ch_039.IO.Adapters.DateTimeForJPAAnalysisAdapter</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/chernivtsi_hospital?characterEncoding=UTF-8"/>
           <!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>-->
        </properties>
    </persistence-unit>
</persistence>